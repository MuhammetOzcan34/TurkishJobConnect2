{
  "version": 2,
  "builds": [
    { "src": "server/dist/index.js", "use": "@vercel/node" },
    { "src": "client/index.html", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/dist/index.js" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|json))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
