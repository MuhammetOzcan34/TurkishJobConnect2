  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist",
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "types": ["node", "express"]
